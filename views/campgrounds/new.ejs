<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">주제</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">장소</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">이미지 추가하기</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                </div> -->
                <div class="mb-3">
                    <label for="form-label" for="price">가격</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label"></span>
                        <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0" aria-label="price" aria-describedby="price-label" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">설명</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">추가하기</button>
                </div>
            </form>
            <a href="/campgrounds">go back</a>
        </div>
    </div>