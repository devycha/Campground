<% layout("layouts/boilerplate") %>
    <div class="row">
        <div class="col-4 offset-4">
            <div class="card mb-3" style="width: 18rem;">
                <img src="<%=campground.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campground.title%>
                    </h5>
                    <p class="card-text">
                        <%=campground.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=campground.location%>
                    </li>
                    <li class="list-group-item">
                        <%= campground.price %>Ïõê
                    </li>
                    <li class="list-group-item">A third item</li>
                </ul>
                <div class="row">
                    <div class="card-body">
                        <a class="btn btn-primary col-4" href="/campgrounds">go back</a>
                        <a class="card-link btn btn-warning col-4" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form class="d-inline col-4" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
            <form action="/campgrounds/<%=campground._id%>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                <div class="mb-3">
                    <label class='form-label' for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                </div>
                <button class="btn btn-success">review</button>
            </form>
            <% for(let review of campground.reviews) { %>
                <div class="card mb-3 ">
                    <div class="card-body">
                        <h5 class="card-title">Rating: <%= 'üåü'*review.rating %></h5>
                        <p class="card-text">Review: <%= review.body %></p>
                        <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>